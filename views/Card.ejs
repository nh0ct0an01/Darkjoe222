                         <div class="page-content-wrapper">

                            <div class="container-fluid">
                                
                            <div class="row">
                                <div class="col-12">
                                    <div class="card m-b-30">
                                        <div class="card-body">
            
                                            <h4 class="mt-0 header-title">Danh Sách Thẻ Của <%- danhsachthe.NameKh      %> </h4>
                                            <p class="text-muted m-b-30 font-14">
                                            </p>
            
                                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                                                <thead>
                                                <tr>
                                                    <th>Tên Bank</th>
                                                    <th>Số Thẻ</th>
                                                    <th>Ngày Chốt Sao Kê</th>
                                                    <th>Hạn chót Thanh Toán</th>
                                                    <th>Hạn mức</th>
                                                </tr>
                                                </thead>
            
            
                                                <tbody>
                                                    <% danhsachthe.DSTHE.forEach(function(dskh){  %>
                                                <tr>
                                                    <td><%- dskh.BankName      %></td>
                                                    <td><%- dskh.STKH      %></td>
                                                    <td><%- dskh.DateSK   %></td>
                                                    <td> <%- dskh.DateTan   %></td>
                                                    <td> <%- dskh.HanMuc   %></td>
                                                    <%}); %>
                                                  
                                                </tr>
                                            
                                                </tbody>
                                            </table>
            
                                        </div>
                                    </div>
                                </div> <!-- end col -->
                            </div> <!-- end row -->
                                <div class="row">
                                    <div class="col-12">
                                        <div class="card m-b-20">
                                            <div class="card-body">
                
                                                <h4 class="mt-0 header-title">Thêm Thẻ</h4>
                                                <p class="text-muted m-b-30 font-14"></p>
                                            <form class="form-horizontal m-t-30" action="./Card" method="POST">   
                                                <div class="form-group row">
                                                    <label for="example-text-input" class="col-sm-2 col-form-label">Tên Ngân Hàng</label>
                                                    <div class="col-sm-10">
                                                        <input class="form-control" type="text" minlength=3 name ="txtBankName"  id="example-text-input">
                                                       
                                                    </div>
                                                </div>

                                                <div hidden class="form-group row">
                                                    <label for="example-number-input" class="col-sm-2 col-form-label">Số ID</label>
                                                    <div class="col-sm-10">
                                                        <input class="form-control" type="text" name ="slcID" value="<%- danhsachthe._id      %>"  id="example-text-input">
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label for="example-number-input" class="col-sm-2 col-form-label">Số Thẻ</label>
                                                    <div class="col-sm-10">
                                                        <input class="form-control"  type="text" maxlength=20 minlength=20 name="txtSTKH"   id="example-number-input">
                                                    </div>
                                                </div>
                                              
                                                <div class="form-group row">
                                                    <label for="example-date-input" class="col-sm-2 col-form-label">Ngày Chốt Sao Kê</label>
                                                    <div class="col-sm-10">
                                                        <input class="form-control" type="date" name="txtDateSK"  value="2021-02-19" id="example-date-input">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="example-date-input" class="col-sm-2 col-form-label">Ngày Thanh Toán</label>
                                                    <div class="col-sm-10">
                                                        <input class="form-control" type="date" name="txtDateTT"  value="2021-03-19" id="example-date-input">
                                                    </div>
                                                </div>
                                                
                                                <div class="form-group row">
                                                    <label for="example-number-input" class="col-sm-2 col-form-label">Hạn Mức Thẻ</label>
                                                    <div class="col-sm-10">
                                                        <input class="form-control" type="number" min=1000000 name="txtHanMuc" value = 50000000   id="example-number-input">
                                                    </div>
                                                </div>
                                              
                                                <div class="col-sm-6 text-right">
                                                    <button  class="btn btn-primary w-md waves-effect waves-light" type="submit">Thêm vào</button>
                                                </div>
                                            </form>
                                               
                                            
                                               
